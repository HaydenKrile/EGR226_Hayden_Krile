#include "msp.h"


/**
 * main.c
 */
uint8_t DebounceSwitch1();

void main(void)
{

    P2->SEL1 &= ~7;
    P2->SEL0 &= ~7;
    P2->DIR |= 0x07;
    P1->DIR |= 0x01;


    while(1){

        if(DebounceSwitch1()){
            P2->OUT |= 1;
        }
        else{
            P2->OUT &= ~1;
        }
    }

}

int DebounceSwitch1(void){
    int pin_Value = 0;
    if((P1IN & 2) == 0x00){
        __delay_cycles(30000);
        if((P1IN & 2) == 0){
            pin_Value = 1;
        }
    }
    return pin_Value;
}
